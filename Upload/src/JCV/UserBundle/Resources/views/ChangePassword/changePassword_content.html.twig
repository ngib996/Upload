{% trans_default_domain 'FOSUserBundle' %}
{% if form is defined %}
    {% form_theme form 'JCVUserBundle:Form:form_JCV_type.html.twig' %}
{% endif %}
<div class="well">

    {% if form is defined %}
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.current_password, "Current password", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.current_password) }}
            <div class="col-sm-4">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword, "New password", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            <div class="form-group">
            {{ form_label(form.plainPassword, "Confirm password", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div >
            <input type="submit" value="{{ 'Change'|trans }}" class="col-sm-offset-4"/>
        </div>

     {{ form_rest(form) }}
    {{ form_end(form) }}
{% endif %}
</div>
